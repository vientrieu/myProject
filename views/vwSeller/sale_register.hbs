<script type="text/javascript" src="../../assets/js/ckeditor/ckeditor.js"></script>
<header>
    {{>home/header}}
</header>
<main>
    <div class="swiper-slide swiper-lazy swiper-lazy-loaded swiper-slide-active"
                        style="height:1050px;
                        background-image: url(&quot;../../images/bg_47.jpg&quot);
                        background-repeat: no-repeat;
                        background-attachment: fixed;
                        background-size:100%;
                        display: flex; justify-content: center;">
        <div style="width: 50%;">
            <form action="/seller/sale-register", method="POST">
                <div class="card">
                    <!--Header-->
                    <div class="header pt-3 peach-gradient">
                        <div class="row d-flex justify-content-center">
                            <h3 class="white-text font-weight-bold">PRODUCT</h3>
                        </div>
                    </div>
                    <div class="card-body mx-1 mt-1">
                    <!--Body-->
                    <div class="md-form">
                        <label for="Form-name">Product's name</label></br>
                        <input type="text" id="Form-name" name="product_name" class="form-control">
                    </div>
                    <div class="md-form">
                        <label for="Form-starting-price">Starting price</label></br>
                        <input type="text" id="Form-starting-price" name="starting_price" class="form-control">
                    </div>

                    <div class="md-form">
                        <label for="Form-step-price">Step price</label></br>
                        <input type="text" id="Form-step-price" name="step_price" class="form-control">
                    </div>
                    
                    <div class="md-form">
                        <label for="Form-price-to-buy-now">Price to buy now</label></br>
                        <input type="text" id="Form-price-to-buy-now" name="price_tobuynow" class="form-control">
                    </div>
                    
                    <div class="md-form">
                        <label for="description">Product Description</label></br>
                        <div class="form-group">
                        </div>
                        <textarea  id="editor" class="form-control md-textarea" name="product_description" rows="5"></textarea>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="materialChecked2" name="extension" checked>
                        <label class="form-check-label" for="materialChecked2">Extension</label>
                    </div>
                    <!--Grid row-->
                    <div class="row d-flex mb-4">
                        <!--Grid column-->
                        <div class="col-md-1 col-md-7 d-flex  ml-auto">
                            <div class="text-center">
                                <button type="submit" class="btn btn-grey btn-rounded z-depth-1a waves-effect waves-light">Send</button>
                            </div>
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                </div>
            </form>
        </div>
    </div>
</main>
<footer>
    <i class="footer-bor" style="background:#acacac;opacity:.1;"></i>
    <div id="footer" class="footer wow slideInUp backcolor back-footer animated"
        style="background: rgb(236, 179, 90); visibility: visible; animation-name: slideInUp;">
        {{>home/bottom}}
    </div>
    <!-- /footer -->
    <script type="text/javascript">
        var qq_left = "3",
            qq_topbottom = 50;
        $(".kefu_q3 .default").on("click", function () {
            $(this).animate({
                "right": -120 + '%'
            }, 100);
            $(".default-hide").animate({
                "margin-right": 0
            }, 300);
        })
        $(".colse").on("click", function () {
            $(".default-hide").animate({
                "margin-right": -120 + '%'
            }, 100);
            $(".kefu_q3 .default").animate({
                "right": qq_left + 'px',
                "bottom": qq_topbottom + 'px'
            }, 300);
        })
    </script>   
</footer>
<script>
    CKEDITOR.replace('editor');
</script>